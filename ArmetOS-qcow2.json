{
    "variables": {
	"os_codename": "{{env `OS_CODENAME`}}",
	"os_version": "{{env `OS_VERSION`}}"
    },
    "builders":
    [
	{
	    "type": "qemu",
	    "headless": "true",
	    "communicator": "ssh",
	    "iso_url": "https://ftp-stud.hs-esslingen.de/pub/fedora/linux/releases/28/Server/x86_64/iso/Fedora-Server-netinst-x86_64-28-1.1.iso",
	    "iso_checksum_url": "https://ftp-stud.hs-esslingen.de/pub/fedora/linux/releases/28/Server/x86_64/iso/Fedora-Server-28-1.1-x86_64-CHECKSUM",
	    "iso_checksum_type": "sha256",
	    "accelerator": "kvm",
	    "disk_size": 8000,
	    "ssh_username": "armet",
	    "ssh_password": "123123",
	    "ssh_port": 22,
	    "ssh_timeout": "9000s",
	    "output_directory": "armetos/qemu/x86_64/soggy-sock",
	    "http_directory": "kickstart/ks",
	    "http_port_min": 10082,
	    "http_port_max": 10089,
	    "ssh_host_port_min": 2222,
	    "ssh_host_port_max": 2229,
	    "vm_name": "ArmetOS-{{user `os_codename`}}-{{user `os_version`}}.x86_64.qcow2",
	    "vnc_bind_address": "0.0.0.0",
	    "net_device": "virtio-net",
	    "disk_interface": "virtio",
	    "boot_wait": "5s",
	    "boot_command":  [
		"<tab><wait>",
		" ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/min.ks<enter>"
	    ],
	    "qemuargs": [
		[ "-m", "4048m" ]
	    ]
	}
    ],

    "provisioners": [
	{
	    "script": "provisioner/enable_services.sh",
	    "type": "shell"
	}
    ]
}
